<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
	<appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<File name="ProofTreeFile" fileName="logs/proofTree.log">
			<PatternLayout
				pattern="%d{yyyy-mm-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
			<ThresholdFilter level="debug" onMatch="DENY" onMismatch="ACCEPT"/>
		</File>
		<File name="StreamerTrace" fileName="logs/streamerTrace.log">
			<PatternLayout
				pattern="%d{yyyy-mm-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
			<ThresholdFilter level="trace" onMatch="DENY" onMismatch="ACCEPT"/>
		</File>
	</appenders>
	<loggers>
		<logger name="insynth.reconstruction.Streamer$" level="all"
			additivity="false">
			<appender-ref ref="Console" />
			<appender-ref ref="StreamerTrace" />
		</logger>
		<logger name="insynth.Solver" level="trace" additivity="false">
			<appender-ref ref="ProofTreeFile" />
		</logger>
		<root level="error">
			<appender-ref ref="Console" />
		</root>
	</loggers>
</configuration>
